@using Libar_Hotel.Models
@model List<Room>
   

@{
    ViewBag.Title = "Sobe";
}


<br>

@if (TempData["Message"] != null)
{
   
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Obaveštenje</strong> <h2>@TempData["Message"]</h2>
    </div>
}



<div class="panel panel-primary">
    <div class="panel panel-heading text-center"><h2>Sobe</h2></div>
    
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr class="bg-info">
                    <td><b>Broj sobe</b></td>
                    <td><b>Sprat</b></td>
                    <td><b>Pogled</b></td>
                    <td><b>Tip sobe</b></td>
                    <td><b>Status sobe</b></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>


                </tr>

            </thead>
            <tbody>
                @foreach (var room in Model)
                {


                    <tr>
                        <td>@room.Id</td>
                        <td>@room.Floor</td>
                        <td>@room.RoomView.Name</td>
                        <td>@room.RoomType.Name</td>
                        <td>@room.RoomStatus.Name</td>

                        <td>
                            @Html.ActionLink("Detalji", "Details", new { id = room.Id }, new { @class = "btn btn-warning btn-block" })
                        </td>
                        <td>
                            @Html.ActionLink("Izmeni", "Edit", new { id = room.Id }, new { @class = "btn btn-primary btn-block" })
                        </td>
                        <td>
                            @Html.ActionLink("Izbrisi", "DeleteDetails", new { id = room.Id }, new { @class = "btn btn-danger btn-block" })
                        </td>
                    </tr>

                   
                }

            </tbody>
        </table>
            </div>
        
    </div>
<div>

    @Html.ActionLink("Dodaj sobu", "Create", null, new { @class = "btn btn-success btn-lg" })

  </div>



