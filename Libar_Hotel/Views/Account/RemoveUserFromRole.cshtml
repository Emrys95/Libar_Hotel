@model Libar_Hotel.Models.UserRoleModel
@{
    ViewBag.Title = "Ukloni ulogu korisniku";
}

<br />

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="text-center">Ukoloni ulogu korisnika</h2>
    </div>

    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", disabled = "disabled" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Roles)
                @Html.DropDownListFor(m => m.RoleName, new SelectList(Model.Roles), new { @class = "form-control"})
            </div>

            <input type="submit" name="submit" value="Ukloni ulogu" class="btn btn-danger"/>
            @Html.ActionLink("Vrati se", "Index", "Role", routeValues: null, htmlAttributes: new { @class="btn btn-info"})

        }


    </div>
</div>
