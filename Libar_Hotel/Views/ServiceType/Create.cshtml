@model Libar_Hotel.Models.ServiceType

@{
    ViewBag.Title = "Napravi uslugu";
}
<br>
<div class="panel panel-success">
    <div class="panel panel-heading">
        <h1>Dodajte novu uslugu</h1>
    </div>
    <div class="panel panel-body">
        @using (Html.BeginForm("Create","ServiceType",FormMethod.Post, new { id="service-type" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Price)
            </div>
            <input type="submit" class="btn btn-success" name="Submit" value="Dodaj" />
           
            <div>
                <br>
                @Html.ActionLink("Nazad na listu tipova usluga", "Index", null, new { @class = "btn btn-info btn-m" })
            </div>


            
        }
    </div>

</div>

