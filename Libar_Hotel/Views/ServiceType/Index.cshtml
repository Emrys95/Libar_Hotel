@using Libar_Hotel.Models
@model List<ServiceType>

@{
    ViewBag.Title = "Tipovi usluga";
}
<br>

@if (TempData["Message"] != null)
{
    @*@<p>@TempData["Message"]</p>*@
    <br />
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Obaveštenje</strong> <h2>@TempData["Message"]</h2>
    </div>
}

<div class="panel panel-primary">
    <div class="panel panel-heading text-center">
        <h1>Tipovi usluga</h1>

    </div>

    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
                <tr class="bg-info">
                    <td><b>Tip usluge<b></td>
                    <td><b>Cena usluge</b></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var serviceType in Model)
                {
                    <tr>
                        <td> @serviceType.Name </td>
                        <td> @serviceType.Price &euro; </td>
                        <td>
                            @Html.ActionLink("Detalji", "Details", new { id = serviceType.Id }, new { @class = "btn btn-warning btn-block" })
                        </td>
                        <td>
                            @Html.ActionLink("Izmeni", "Edit", new { id = serviceType.Id }, new { @class = "btn btn-primary btn-block" })
                        </td>
                        <td>
                            @Html.ActionLink("Izbriši", "DeleteDetails", new { id = serviceType.Id }, new { @class = "btn btn-danger btn-block" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>



</div>
<div>
    @Html.ActionLink("Dodaj tip usluge", "Create", null, new { @class = "btn btn-success btn-lg" })
</div>



