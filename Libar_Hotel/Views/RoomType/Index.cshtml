@using Libar_Hotel.Models
@model List<RoomType>

@{
    ViewBag.Title = "Tipovi soba";
}
<br>

@if (TempData["Message"] != null)
{
   
    <div class="alert alert-success alert-dismissible fade in">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Obaveštenje</strong> <h2>@TempData["Message"]</h2>
    </div>
}


<div class="panel panel-primary">
    <div class="panel panel-heading text-center">
        <h1>Tipovi soba</h1>
    </div>

    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
                <tr class="bg-info">
                    <td><b>Tip sobe</b></td>
                    <td><b>Cena sobe</b></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                </tr>
            </thead>
            <tbody>
                @foreach (var roomType in Model)
                {
                    <tr>
                        <td> @roomType.Name</td>
                        <td> @roomType.Price &euro; </td>
                        <td>
                            @Html.ActionLink("Detalji", "Details", new { id = roomType.Id }, new { @class = "btn btn-warning btn-block" })
                        </td>
                        <td>
                            @Html.ActionLink("Izmeni", "Edit", new { id = roomType.Id }, new { @class = "btn btn-primary btn-block" })
                        </td>
                        <td>
                            @Html.ActionLink("Izbriši", "DeleteDetails", new { id = roomType.Id }, new { @class = "btn btn-danger btn-block" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>



</div>
<div>
    @Html.ActionLink("Dodaj tip sobe", "Create", null, new { @class = "btn btn-success btn-lg" })
</div>

